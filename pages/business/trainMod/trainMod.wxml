<!--pages/business/trainMod/trainMod.wxml-->
<view class="weui-form__control-area box">
  <view class="weui-cells__group weui-cells__group_form">
    <view class="title">装猪详情</view>
    <view class="weui-cells">

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">车次编号：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange" value="{{data.id}}" data-change="id" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">装猪日期：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange" value="{{data.stockYear + '-' + data.stockMonth + '-' + data.stockDate}}" data-change="stockDay" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">总头数：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange" value="{{data.stockAllNumb}}" data-change="stockAllNumb" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">总重量：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange" value="{{data.stockAllWeight}}" data-change="stockAllWeight" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">均重：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.stockAverWeight}}" data-change="stockAverWeight" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">单价：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.stockAverPrice}}" data-change="stockAverPrice" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">其他：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.stockOrder}}" data-change="stockOrder" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">总金额：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.stockAllPrice}}" data-change="stockAllPrice" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">收款人：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.stockCollName}}" data-change="stockCollName" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">卡号：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.stockCollCard}}" data-change="stockCollCard" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">备注：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.stockRemark}}" data-change="stockRemark" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

    </view>

    <view class="title">运输详情</view>
    <view class="weui-cells">

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">司机：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.transportName}}" data-change="transportName" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">司机电话：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.transportTell}}" data-change="transportTell" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">车牌：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.transportCar}}" data-change="transportCar" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">基本运费：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.transportPrice}}" data-change="transportPrice" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">其他：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.transportOrderPrice}}" data-change="transportOrderPrice" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

    </view>

    <view class="title">卸猪详情</view>
    <view class="weui-cells">

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">卸猪日期：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellDay}}" data-change="sellDay" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">卸猪地址：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellAddress}}" data-change="sellAddress" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">卸猪头数：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellAllNumb}}" data-change="sellAllNumb" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">伤残情况：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellLoss}}" data-change="sellLoss" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">总重量：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellAllWeight}}" data-change="sellAllWeight" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">均重：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellAverWeight}}" data-change="sellAverWeight" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">单价：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellAverPrice}}" data-change="sellAverPrice" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">总掉标：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellLossWeight}}" data-change="sellLossWeight" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">总差价：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellPriceDiff}}" data-change="sellPriceDiff" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">代卖费：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellPriceCons}}" data-change="sellPriceCons" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">其他：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellOrder}}" data-change="sellOrder" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">总金额：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellAllPrice}}" data-change="sellAllPrice" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">盈亏：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.profitAndLoss}}" data-change="profitAndLoss" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>

      <view class="weui-cell weui-cell_active">
        <view class="weui-cell__hd"><label class="weui-label">备注：</label></view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput="handlInputChange"  value="{{data.sellRemark}}" data-change="sellRemark" placeholder="请填写" binplaceholder-class="weui-input__placeholder" />
        </view>
      </view>
    </view>

  </view>
</view>

<button bindtap="handlBtnClick">修改</button>


